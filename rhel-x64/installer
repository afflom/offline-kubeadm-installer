#!/bin/bash

# Get reference directory
directory=$(pwd)

# Create Kubernetes firewall rules
firewall-cmd --zone=public --add-port=6443/tcp --permanent
firewall-cmd --zone=public --add-port=10250/tcp --permanent
firewall-cmd --reload

# Set iptables to see bridged traffic

cat <<EOF > /etc/sysctl.d/k8s.conf
net.bridge.bridge-nf-call-ip6tables = 1
net.bridge.bridge-nf-call-iptables = 1
EOF
sysctl --system

# Install packages
yum install -y $directory/packages/*.rpm

## Create /etc/docker directory.
mkdir /etc/docker

# Setup daemon.
cat > /etc/docker/daemon.json <<EOF
{
  "exec-opts": ["native.cgroupdriver=systemd"],
  "log-driver": "json-file",
  "log-opts": {
    "max-size": "100m"
  },
  "storage-driver": "overlay2",
  "storage-opts": [
    "overlay2.override_kernel_check=true"
  ]
}
EOF

mkdir -p /etc/systemd/system/docker.service.d

# Start Docker
systemctl enable docker
systemctl start docker

# Load container images
for f in $directory/images/*; do docker load -i $directory/images/$f;

# Start Kubelet
systemctl enable kubelet
systemctl start kubelet

# Make weave-net available
mkdir /root/templates
cp $directory/kubernetes-bundle/templates/* /root/templates


